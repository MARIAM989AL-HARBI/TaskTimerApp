<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tasktimerapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskTimerApp">
        <activity
            android:name=".activity.UpdateTaskActivity"
            android:exported="false" />
        <activity
            android:name=".activity.TaskDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AddTaskActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SummaryActivity"
            android:exported="false" />
        <activity
            android:name=".activity.TaskListActivity"
            android:exported="false" />
        <activity
            android:name=".activity.GetStartedActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>