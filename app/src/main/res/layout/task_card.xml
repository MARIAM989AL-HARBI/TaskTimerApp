<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cell"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/card_bc">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/task_card_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arimo"
            android:maxLines="2"
            android:padding="10dp"
            android:text="Task Title"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arimo"
            android:lineSpacingExtra="10sp"
            android:maxLines="2"
            android:padding="10dp"
            android:text="task_description \ntask_ scription\ntask_description"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_title" />

        <TextView
            android:id="@+id/task_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:maxLines="2"
            android:padding="10dp"
            android:text="@string/_00_00"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:textSize="38sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_title" />

        <TextView
            android:id="@+id/push_timer_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:clickable="true"
            android:visibility="invisible"
            android:background="@drawable/push_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:backgroundTint="@color/transparent"
            android:src="@drawable/edit_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/time_button"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:backgroundTint="@color/transparent"
            android:src="@drawable/time_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/edit_button" />

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:backgroundTint="@color/transparent"
            android:src="@drawable/delete_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>